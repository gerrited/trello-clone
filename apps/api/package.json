{
  "name": "@trello-clone/api",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "NODE_OPTIONS='--conditions=source' tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "lint": "eslint src/",
    "test": "vitest run --passWithNoTests",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "NODE_OPTIONS='--conditions=source' tsx src/db/migrate.ts",
    "db:seed": "NODE_OPTIONS='--conditions=source' tsx src/db/seed.ts"
  },
  "dependencies": {
    "@trello-clone/shared": "workspace:*",
    "bcrypt": "^5.1",
    "cookie-parser": "^1.4",
    "cors": "^2.8",
    "dotenv": "^16.4",
    "drizzle-orm": "^0.38",
    "express": "^5.0",
    "fractional-indexing": "^3.2",
    "helmet": "^8.0",
    "jsonwebtoken": "^9.0",
    "multer": "^2.0.2",
    "passport": "^0.7",
    "passport-google-oauth20": "^2.0",
    "passport-microsoft": "^1.0",
    "pino": "^9.0",
    "pino-pretty": "^13.0",
    "postgres": "^3.4",
    "socket.io": "^4.8",
    "zod": "^3.24"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0",
    "@types/cookie-parser": "^1.4",
    "@types/cors": "^2.8",
    "@types/express": "^5.0",
    "@types/jsonwebtoken": "^9.0",
    "@types/multer": "^2.0.0",
    "@types/passport": "^1.0",
    "@types/passport-google-oauth20": "^2.0",
    "@types/supertest": "^6.0",
    "drizzle-kit": "^0.30",
    "supertest": "^7.0",
    "tsx": "^4.19",
    "typescript": "^5.7",
    "vitest": "^3.0",
    "@vitest/coverage-v8": "^3.0"
  }
}
